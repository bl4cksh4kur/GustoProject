{% extends 'base.html.twig' %}

{% block title %}Mon compte - Gusto-Cowork{% endblock %}

{% block navbar %}{% endblock %}


{% block content %}


    <section id="features" class="features">

      <div class="container" data-aos="fade-up">
       
        <div class="row feature-icons" data-aos="fade-up">

          <div class="row">
            
            <div class="text-center">
              <div class="row align-self-center gy-4">

     <div class="text-center">
        <h3>Bienvenue sur votre dashboard : {{ app.user.email }}</h3>
        <h5>Gérer votre compte, vos réservations et vos commandes.</h5>
      </div>
    
                <div class="icon-box" data-aos="fade-up" data-aos-delay="100">

                  
                  <div class="card">
                      <div class="card-header">
                                Mon compte
                      </div></br>
                  <div class="card-body">
                    <h4>Mes réservations</h4>
                    <p><a href="{{path('account_reservation')}}">Consulter mes réservations</a></p>

                    <h4>Mes commandes</h4>
                    <p><a href="{{ path('account_order')}}">Consulter mes commandes</a></p>
                
                    <h4>Mon mot de passe</h4>
                    <p><a href="{{path('account_password')}}">Modifier mon mot de passe</a></p>


                    {% if is_granted('ROLE_ADMIN') %}
                    <h4>Administration</h4>
                    <p><a href="/admin">Accéder au backoffice</a></p>
                    {% endif %}

                    <img src="{{asset('assets/img/welcome.png')}}" alt="gusto-welcome" width="200px">

                </div>


                </div>

              </div>
            </div>

          </div>

        </div>

      </div>

    </section>


{% endblock %}

{% block footer %}{% endblock %}